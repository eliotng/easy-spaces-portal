{
  "name": "easy-spaces-dynamics365-tests",
  "version": "1.0.0",
  "description": "Test suite for Easy Spaces Dynamics 365 migration project",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/integration",
    "test:e2e": "playwright test",
    "test:powershell": "pwsh -Command \"Invoke-Pester -Path test/powershell -OutputFormat NUnitXml -OutputFile TestResults.xml\"",
    "test:all": "npm run test:coverage && npm run test:powershell",
    "lint": "eslint test/**/*.js",
    "format": "prettier --write test/**/*.{js,json}"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.5",
    "@types/jest": "^29.5.11",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/test/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/test/**",
      "!**/coverage/**",
      "!**/obj/**",
      "!**/out/**",
      "!**/generated/**",
      "!**/*.ts",
      "!**/*.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/test/unit/**/*.test.js",
      "**/test/integration/**/*.test.js",
      "**/test/unit/**/*.spec.js",
      "**/test/integration/**/*.spec.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test/e2e/"
    ]
  }
}