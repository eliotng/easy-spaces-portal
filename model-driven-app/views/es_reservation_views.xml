<savedqueries>
  <!-- Active Reservations View -->
  <savedquery>
    <savedqueryid>{00000000-0000-0000-00AA-000010001008}</savedqueryid>
    <name>Active Reservations</name>
    <querytype>0</querytype>
    <isdefault>1</isdefault>
    <returnedtypecode>10001</returnedtypecode>
    <isquickfindquery>0</isquickfindquery>
    <isprivate>0</isprivate>
    <fetchxml>
      <fetch version="1.0" output-format="xml-platform" mapping="logical" distinct="false">
        <entity name="es_reservation">
          <attribute name="es_name" />
          <attribute name="es_customercontactid" />
          <attribute name="es_spaceid" />
          <attribute name="es_startdate" />
          <attribute name="es_enddate" />
          <attribute name="es_status" />
          <attribute name="es_totalamount" />
          <attribute name="es_paymentstatus" />
          <attribute name="es_confirmationcode" />
          <attribute name="es_reservationid" />
          <order attribute="es_startdate" descending="false" />
          <filter type="and">
            <condition attribute="es_status" operator="in">
              <value>1</value>
              <value>2</value>
              <value>3</value>
              <value>4</value>
            </condition>
            <condition attribute="statecode" operator="eq" value="0" />
          </filter>
          <link-entity name="es_space" from="es_spaceid" to="es_spaceid" link-type="inner" alias="space">
            <attribute name="es_name" />
            <attribute name="es_floor" />
            <attribute name="es_roomnumber" />
          </link-entity>
          <link-entity name="contact" from="contactid" to="es_customercontactid" link-type="outer" alias="contact">
            <attribute name="fullname" />
            <attribute name="emailaddress1" />
          </link-entity>
        </entity>
      </fetch>
    </fetchxml>
    <layoutxml>
      <grid name="resultset" jump="es_name" select="1" icon="1" preview="1">
        <row name="result" id="es_reservationid">
          <cell name="es_name" width="150" />
          <cell name="contact.fullname" width="150" disableSorting="0" />
          <cell name="space.es_name" width="150" disableSorting="0" />
          <cell name="es_startdate" width="125" />
          <cell name="es_enddate" width="125" />
          <cell name="es_status" width="100" />
          <cell name="es_totalamount" width="100" />
          <cell name="es_paymentstatus" width="100" />
          <cell name="es_confirmationcode" width="120" />
        </row>
      </grid>
    </layoutxml>
    <LocalizedNames>
      <LocalizedName description="Active Reservations" languagecode="1033" />
    </LocalizedNames>
    <Descriptions>
      <Description description="Shows all active reservations" languagecode="1033" />
    </Descriptions>
  </savedquery>
  
